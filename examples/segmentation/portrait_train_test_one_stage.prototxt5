name: "segmentation"
layer {
  name: "data"
  type: "SegData"
  top: "image"
  top: "label"
  transform_param {
    crop_size: 200
    mirror: true
  }
  data_param {
    source: "/raid/xuehan/segmentation_train_split"
    batch_size: 128
    backend: LMDB
  }
  include {
    phase: TRAIN
  }
}
layer {
  name: "data"
  type: "SegData"
  top: "image"
