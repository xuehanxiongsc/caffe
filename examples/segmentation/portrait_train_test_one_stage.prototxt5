  bottom: "image"
  top: "cropscore2"
  crop_param {
    axis: 2
    offset: 16
  }
}
layer {
  name: "loss"
  type: "SoftmaxWithLoss"
  bottom: "cropscore2"
  bottom: "label"
  top: "loss"
  loss_weight: 1
  loss_param {
    normalize: false
  }
}
layer {
  name: "accuracy"
  type: "Accuracy"
  bottom: "cropscore2"
  bottom: "label"
  top: "accuracy"
}

